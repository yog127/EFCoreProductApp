@model EFCoreProductApp.Business.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h2>Category Details</h2>

<div class="card p-3">
    <h4><strong>Category ID:</strong> @Model.CategoryId</h4>
    <h4><strong>Category Name:</strong> @Model.CategoryName</h4>
</div>

<a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
