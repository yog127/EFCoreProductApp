@model EFCoreProductApp.Business.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>
<h4>Are you sure you want to delete this category?</h4>

<div class="card p-3">
    <h4><strong>Category ID:</strong> @Model.CategoryId</h4>
    <h4><strong>Category Name:</strong> @Model.CategoryName</h4>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
