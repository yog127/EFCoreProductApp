@model EFCoreProductApp.Business.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>
<h4>Are you sure you want to delete this product?</h4>

<div class="card p-3">
    <h4><strong>Product ID:</strong> @Model.ProductId</h4>
    <h4><strong>Product Name:</strong> @Model.ProductName</h4>
    <h4><strong>Category:</strong> @Model.Category.CategoryName</h4>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
